<mapper namespace="com.atgao.mall.mapper.ProductMapper">

    <resultMap id="BaseResultMap" type="com.atgao.mall.pojo.Product">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="categoryId" column="category_id" jdbcType="INTEGER"/>
